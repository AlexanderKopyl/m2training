<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="blog_post" resource="default" engine="innodb" comment="Posts Table">
        <column xsi:type="smallint" name="post_id" unsigned="false" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="varchar" name="title" nullable="true" length="255" comment="Post Title"/>
        <column xsi:type="varchar" name="short_description" nullable="true" length="255" comment="Post short description"/>
        <column xsi:type="text" name="meta_description" nullable="true" comment="Post Meta Description"/>
        <column xsi:type="varchar" name="meta_title" nullable="true" length="255" comment="Page Meta Title"/>
        <column xsi:type="varchar" name="identifier" nullable="true" length="100" comment="Post String Identifier"/>
        <column xsi:type="mediumtext" name="content" nullable="true" comment="Post Content"/>
        <column xsi:type="varchar" name="author" nullable="false" length="255" comment="Post Author Name"/>
        <column xsi:type="int" name="views" nullable="true" comment="Post Views	"/>
        <column xsi:type="timestamp" name="publish_date" nullable="true" default="CURRENT_TIMESTAMP"
                comment="Post Publish Date"/>
        <column xsi:type="varchar" name="thumb" nullable="true" length="255" comment="Post Thumb Image"/>
        <column xsi:type="timestamp" name="creation_time" on_update="false" nullable="false"
                default="CURRENT_TIMESTAMP" comment="Post Creation Time"/>
        <column xsi:type="timestamp" name="update_time" on_update="true" nullable="false"
                default="CURRENT_TIMESTAMP" comment="Post Modification Time"/>
        <column xsi:type="smallint" name="is_active" unsigned="false" nullable="false" identity="false"
                default="1" comment="Is Post Active"/>
        <column xsi:type="smallint" name="sort_order" unsigned="false" nullable="false" identity="false"
                default="0" comment="Post Sort Order"/>
        <column xsi:type="varchar" name="post_layout" nullable="true" length="255" comment="Post Layout"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
        <index referenceId="BLOG_POST_IDENTIFIER" indexType="btree">
            <column name="identifier"/>
        </index>
        <index referenceId="BLOG_POST_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
        <index referenceId="BLOG_POST_TITLE_META_DESCRIPTION_IDENTIFIER_CONTENT" indexType="fulltext">
            <column name="title"/>
            <column name="meta_description"/>
            <column name="identifier"/>
            <column name="content"/>
        </index>
    </table>
    <table name="blog_post_store" resource="default" engine="innodb" comment="Post To Store Linkage Table">
        <column xsi:type="smallint" name="post_id" unsigned="false" nullable="false" identity="false"
                comment="Entity ID"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" identity="false"
                comment="Store ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
            <column name="store_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="BLOG_POST_STORE_POST_ID_BLOG_POST_POST_ID" table="blog_post_store"
                    column="post_id" referenceTable="blog_post" referenceColumn="post_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="BLOG_POST_STORE_STORE_ID_STORE_STORE_ID" table="blog_post_store"
                    column="store_id" referenceTable="store" referenceColumn="store_id" onDelete="CASCADE"/>
        <index referenceId="BLOG_POST_STORE_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
</schema>
