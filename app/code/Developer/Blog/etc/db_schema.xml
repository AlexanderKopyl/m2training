<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="blog_posts" resource="default" engine="innodb" comment="Posts Table">
        <column xsi:type="int" name="post_id" padding="5" nullable="false" identity="true"
                comment="Post ID"/>
        <column xsi:type="varchar" name="author_name" nullable="false" length="255" comment="Post Author Name"/>
        <column xsi:type="varchar" name="thumb" nullable="true" length="255" comment="Post Thumb Image"/>
        <column xsi:type="timestamp" name="creation_time" on_update="false" nullable="false"
                default="CURRENT_TIMESTAMP" comment="Post Creation Time"/>
        <column xsi:type="timestamp" name="update_time" on_update="true" nullable="false"
                default="CURRENT_TIMESTAMP" comment="Post Modification Time"/>
        <column xsi:type="smallint" name="is_active" padding="5" nullable="false" default="1" comment="Is Post Active"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
        <index referenceId="DEVELOPER_POST_IS_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
    </table>

    <table name="blog_posts_description" resource="default" engine="innodb" comment="Posts Description">
        <column xsi:type="int" name="post_id" padding="5" nullable="false" identity="true"
                comment="Post ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Post Title"/>
        <column xsi:type="varchar" name="meta_description" nullable="true" length="255" comment="Post Meta_description"/>
        <column xsi:type="varchar" name="meta_title" nullable="true" length="255" comment="Post Meta_title"/>
        <column xsi:type="mediumtext" name="description" nullable="false"  comment="Post Content"/>
        <column xsi:type="text" name="short_description" nullable="false"  comment="Post Short Text"/>
        <index referenceId="DEVELOPER_POST_DESCRIPTION" indexType="btree">
            <column name="title"/>
        </index>
        <index referenceId="DEVELOPER_POST_DESCRIPTION_POST_ID" indexType="btree">
            <column name="post_id"/>
        </index>
        <constraint xsi:type="foreign" referenceId="DEVELOPER_BLOG_POST_POST_ID" table="blog_posts" column="post_id" referenceTable="blog_posts" referenceColumn="post_id"/>
    </table>
</schema>
