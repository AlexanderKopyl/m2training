<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider"
                  xsi:type="string">developer_blog_form.developer_blog_form_data_source
            </item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Developer\Blog\Block\Adminhtml\Post\Edit\SaveButton"/>
            <button name="delete" class="Developer\Blog\Block\Adminhtml\Post\Edit\DeleteButton"/>
            <button name="back" class="Developer\Blog\Block\Adminhtml\Post\Edit\BackButton"/>
        </buttons>
        <namespace>developer_blog_form</namespace>
        <deps>
            <dep>developer_blog_form.developer_blog_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="developer_blog_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="blog/index/save"/>
        </settings>
        <dataProvider class="Developer\Blog\Ui\DataProvider\Form\DataProvider"
                      name="developer_blog_form_data_source">
            <settings>
                <requestFieldName>post_id</requestFieldName>
                <primaryFieldName>post_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
            <dataScope>data</dataScope>
        </settings>
        <field name="post_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>post_id</dataScope>
            </settings>
        </field>
        <field name="is_active" sortOrder="15" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Publish post</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="publish_date" sortOrder="15" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Publish date</label>
                <dataScope>publish_date</dataScope>
            </settings>
            <formElements>
                <date>
                    <settings>
                        <options>
                            <option name="timeFormat" xsi:type="string">h:mm:ss A</option>
                            <option name="dateFormat" xsi:type="string">MMM d, YYYY</option>
                            <option name="showsTime" xsi:type="boolean">true</option>
                        </options>
                    </settings>
                </date>
            </formElements>
        </field>
        <field name="author" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Author Name</label>
                <dataScope>author</dataScope>
            </settings>
        </field>
        <field name="title" sortOrder="5" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Title Post</label>
                <dataScope>title</dataScope>
            </settings>
        </field>
        <field name="sort_order" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Sort Order Post</label>
                <dataScope>sort_order</dataScope>
            </settings>
        </field>
        <field name="thumb" sortOrder="17">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">post</item>
                    <item name="label" xsi:type="string" translate="true">Thumb</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="previewTmpl" xsi:type="string">Developer_Blog/image-preview</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="blog/post/upload"/>
                    </item>
                </item>
            </argument>
        </field>
        <fieldset name="content" sortOrder="30">
            <settings>
                <collapsible>true</collapsible>
                <label translate="true">Content</label>
            </settings>
            <field name="content" formElement="wysiwyg">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">post</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <label>Content</label>
                    <dataScope>content</dataScope>
                </settings>
                <formElements>
                    <wysiwyg>
                        <settings>
                            <wysiwyg>true</wysiwyg>
                        </settings>
                    </wysiwyg>
                </formElements>
            </field>
            <field name="short_description" formElement="wysiwyg">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">post</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <label>Short Description</label>
                    <dataScope>short_description</dataScope>
                </settings>
                <formElements>
                    <wysiwyg>
                        <settings>
                            <wysiwyg>true</wysiwyg>
                        </settings>
                    </wysiwyg>
                </formElements>
            </field>
        </fieldset>
        <fieldset name="search_engine_optimisation" sortOrder="20">
            <settings>
                <collapsible>true</collapsible>
                <label translate="true">Search Engine Optimization</label>
            </settings>
            <field name="identifier" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">post</item>
                    </item>
                </argument>
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">URL Key</label>
                    <dataScope>identifier</dataScope>
                </settings>
            </field>
            <field name="meta_title" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">post</item>
                    </item>
                </argument>
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Meta Title</label>
                    <dataScope>meta_title</dataScope>
                </settings>
            </field>
            <field name="meta_description" formElement="textarea">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">post</item>
                    </item>
                </argument>
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Meta Description</label>
                    <dataScope>meta_description</dataScope>
                </settings>
            </field>
        </fieldset>
        <fieldset name="websites" class="Magento\Store\Ui\Component\Form\Fieldset\Websites" sortOrder="30">
            <settings>
                <collapsible>true</collapsible>
                <label translate="true">Post in Websites</label>
            </settings>
            <field name="store_id" formElement="multiselect">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">post</item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <dataType>int</dataType>
                    <tooltip>
                        <link>https://docs.magento.com/m2/ce/user_guide/configuration/scope.html</link>
                        <description>What is this?</description>
                    </tooltip>
                    <label translate="true">Store View</label>
                    <dataScope>store_id</dataScope>
                </settings>
                <formElements>
                    <multiselect>
                        <settings>
                            <options class="Developer\Blog\Ui\Component\Listing\Column\Post\Options"/>
                        </settings>
                    </multiselect>
                </formElements>
            </field>
        </fieldset>

        <fieldset name="design" sortOrder="50">
            <settings>
                <collapsible>true</collapsible>
                <label translate="true">Design</label>
            </settings>
            <field name="post_layout" formElement="select" class="Magento\Cms\Ui\Component\Form\Field\PageLayout">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">post</item>
                    </item>
                </argument>
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Layout</label>
                    <dataScope>post_layout</dataScope>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Developer\Blog\Model\Source\Post\PageLayout"/>
                        </settings>
                    </select>
                </formElements>
            </field>
        </fieldset>
    </fieldset>
</form>
